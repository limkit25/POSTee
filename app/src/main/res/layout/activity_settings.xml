<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center_vertical"
    android:background="#F5F5F5">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/ic_menu_manage"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        app:tint="#2196F3" xmlns:app="http://schemas.android.com/apk/res-auto"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KONFIGURASI SERVER"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#333"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat IP Server (Base URL)"
        android:layout_marginBottom="8dp"
        android:textColor="#555"/>

    <EditText
        android:id="@+id/etIpAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="http://192.168.1.X:8080/"
        android:inputType="textUri"
        android:background="@android:drawable/editbox_background"
        android:padding="12dp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnSaveSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIMPAN &amp; RESTART APLIKASI"
        android:backgroundTint="#2196F3"
        android:padding="14dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BATAL"
        android:backgroundTint="#757575"
        android:layout_marginTop="8dp"/>

</LinearLayout>